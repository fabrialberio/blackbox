{
  "app-id": "com.raggesilver.BlackBox.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "blackbox",
  "desktop-file-name-suffix" : " (Nightly)",
  "finish-args": [
    "--filesystem=home:ro",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": ["-Dgtk4=true", "-Dgtk3=false"],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/GNOME/vte/-/archive/2d165b61f527472a7a7eccee3e94f8ec96690245/vte-2d165b61f527472a7a7eccee3e94f8ec96690245.tar.gz",
          "sha256": "e3aa879c7c8c7c849d8fb50b295ebb11a1d6711bbd363db2037c3a5077c6c9f5"
        }
      ]
    },
    {
      "name": "json-glib",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/GNOME/json-glib/-/archive/23ae2f59bea7405d95218e82edb7f3c4c7c80a87/json-glib-23ae2f59bea7405d95218e82edb7f3c4c7c80a87.tar.gz",
          "sha256": "9fa88f1b8fc926bfd7c4115354a06f79b7b30fa367450a3e7a36932e3b7022ba"
        }
      ]
    },
    {
      "name": "marble",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/raggesilver/marble/-/archive/6dcc6fefa35f0151b0549c01bd774750fe6bdef8/marble-6dcc6fefa35f0151b0549c01bd774750fe6bdef8.tar.gz",
          "sha256": "6fe25ab863bf9a81fac827861b3f17d07fb4a0e4d944dbb0d5b09dfafca59fb4"
        }
      ]
    },
    {
      "name": "libsass",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/lazka/libsass/archive/refs/heads/meson.zip",
          "sha256": "3692f4d1ac10afe5645a6271d25d53572cd10fcc3f7f12d4fc05ff630d0b97c0"
        }
      ]
    },
    {
      "name": "sassc",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/lazka/sassc/archive/refs/heads/meson.zip",
          "sha256": "028ef1cce6037db3c69f889951293b7865b74c20c1ee9d2215df79ca7d4a9e61"
        }
      ]
    },
    {
      "name": "libadwaita",
      "buildsystem": "meson",
      "config-opts": ["-Dtests=false", "-Dexamples=false"],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/GNOME/libadwaita/-/archive/161249fa953fb06a146d8d22612711707ede1ea9/libadwaita-161249fa953fb06a146d8d22612711707ede1ea9.tar.gz",
          "sha256": "013608439427187be56765ded578b3edf4d8ff104f4e5b33fd37d6bbdf77bac0"
