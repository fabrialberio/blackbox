namespace Terminal {
  public void widget_set_margin (Gtk.Widget widget, int margin) {
    widget.set_margin_top (margin);
    widget.set_margin_bottom (margin);
    widget.set_margin_start (margin);
    widget.set_margin_end (margin);
  }
}
